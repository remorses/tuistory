{
  "name": "tuistory",
  "version": "0.0.1",
  "description": "Playwright-like testing for TUI applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./pty": {
      "types": "./dist/pty-node.d.ts",
      "bun": "./dist/pty-bun.js",
      "default": "./dist/pty-node.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["tui", "terminal", "testing", "playwright", "e2e"],
  "author": "remorses",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/remorses/tuistory"
  },
  "dependencies": {
    "ghostty-opentui": "^1.3.3"
  },
  "optionalDependencies": {
    "bun-pty": "*",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
