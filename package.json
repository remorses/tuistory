{
  "name": "tuistory",
  "version": "0.0.8",
  "description": "Playwright-like testing for TUI applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "tuistory": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./src": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./pty": {
      "types": "./dist/pty-node.d.ts",
      "bun": "./dist/pty-bun.js",
      "default": "./dist/pty-node.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "test": "bun test",
    "test:node": "vitest --run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["tui", "terminal", "testing", "playwright", "e2e"],
  "author": "remorses",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/remorses/tuistory"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "cac": "^6.7.14",
    "ghostty-opentui": "workspace:*",
    "hono": "^4.11.7",
    "kill-port-process": "^3.2.1",
    "picocolors": "^1.1.1"
  },
  "optionalDependencies": {
    "node-pty": "1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.7",
    "@types/node": "^25.0.6",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.16"
  }
}
